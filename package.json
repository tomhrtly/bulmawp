{
  "name": "bulmawp",
  "version": "0.4.0",
  "description": "A free WordPress starter theme based on the Bulma CSS framework.",
  "scripts": {
    "build": "npm-run-all css js",
    "css": "npm-run-all css-lint css-compile css-minify",
    "css-compile": "node-sass --output-style expanded --source-map true --source-map-contents true assets/src/sass/style.sass assets/dist/css/style.css",
    "css-lint": "stylelint 'assets/src/sass/*.sass'",
    "css-minify": "cleancss -o assets/dist/css/style.min.css assets/dist/css/style.css",
    "lint": "npm-run-all *-lint-*",
    "js": "npm-run-all js-lint js-compile js-minify",
    "js-compile": "rollup --environment BUNDLE:false --config build/rollup.config.js --sourcemap",
    "js-lint": "stylelint 'assets/src/js/**/*.js'",
    "js-minify": "terser --compress --comments all --output assets/dist/js/script.min.js assets/dist/js/script.js",
    "watch": "npm-run-all --parallel watch-*",
    "watch-css": "nodemon --watch src/ --ext sass --exec 'npm run css'",
    "watch-js": "nodemon --watch src/ --ext js --exec 'npm run js'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomhrtly/BulmaWP.git"
  },
  "author": "Tom Hartley",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tomhrtly/BulmaWP/issues"
  },
  "homepage": "https://github.com/tomhrtly/BulmaWP#readme",
  "dependencies": {
    "bulma": "^0.7.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "clean-css-cli": "^4.2.1",
    "node-sass": "^4.11.0",
    "nodemon": "^1.18.11",
    "npm-run-all": "^4.1.5",
    "rollup": "^1.4.0",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-terser": "^4.0.4",
    "stylelint": "^10.0.1",
    "stylelint-config-recommended": "^2.2.0"
  }
}
